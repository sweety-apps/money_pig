            android:name="com.example.wangcai.activity.StartupActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
        <activity android:name="com.example.wangcai.activity.MainActivity" android:theme="@style/WangcaiTheme" />
